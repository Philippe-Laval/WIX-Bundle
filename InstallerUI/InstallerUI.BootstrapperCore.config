<?xml version="1.0" encoding="utf-8" ?>

<!-- 
Next, we add an XML configuration file, InstallerUI.BootstrapperCore.config, that will tell Burn to use our new assembly.
The file contents can be copied from an existing version of it from the WiX SDK folder to your project. 
Be sure to change its properties in Visual Studio so that, the Copy to Output Directory setting is set to Copy, if newer.
-->

<configuration>
  <configSections>
    <sectionGroup name="wix.bootstrapper" type="Microsoft.Tools.WindowsInstallerXml.Bootstrapper.BootstrapperSectionGroup, BootstrapperCore">
      <section name="host" type="Microsoft.Tools.WindowsInstallerXml.Bootstrapper.HostSection, BootstrapperCore" />
    </sectionGroup>
  </configSections>
  <startup useLegacyV2RuntimeActivationPolicy="true">
    <!-- See http://msdn.microsoft.com/en-us/library/vstudio/w4atty68%28v=vs.110%29.aspx -->
    <supportedRuntime version="v4.0" sku=".NETFramework,Version=v4.7" />
  </startup>
  <wix.bootstrapper>
    <!-- Name of the assembly where the GUI is defined 
    note that this assembly must contain an entry in AssemblyInfo.cs to gives the name of the main entry point
    [assembly: BootstrapperApplication(typeof(InstallerUIBootstrapper))]
    -->
    <host assemblyName="InstallerUI">
      <supportedFramework version="v4\Full" />
    </host>
  </wix.bootstrapper>
</configuration>